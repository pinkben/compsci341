<Window x:Class="Lab_2.EditEntryIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2"
        mc:Ignorable="d"
        Title="EditEntryIdWindow" Height="250" Width="300">
    <Grid>
        <Label x:Name="EditEntryLabel" Content="Edit Entry" HorizontalAlignment="Left" Height="45" Margin="103,33,0,0" VerticalAlignment="Top" Width="102" FontSize="18" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.427"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="IdLabel" Content="ID: " HorizontalAlignment="Left" Height="33" Margin="72,0,0,0" VerticalAlignment="Center" Width="43" FontSize="14"/>
        <Button x:Name="EditEntryButton" Content="Edit Entry" Margin="73,162,73,27" FontSize="16" Click="EditEntryButton_Click"/>
        <TextBox x:Name="IdTextBox" TextWrapping="Wrap" Margin="106,97,59,97"/>

    </Grid>
</Window>
